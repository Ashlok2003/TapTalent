generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id         BigInt   @id @default(autoincrement())
  buyPrice   Float
  sellPrice  Float
  source     String
  timestamp  DateTime @default(now())

  @@map("quotes")
}

generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quote {
  id        BigInt   @id @default(autoincrement())
  buyPrice  Float
  sellPrice Float
  source    String
  timestamp DateTime @default(now())

  @@map("quotes")
}
